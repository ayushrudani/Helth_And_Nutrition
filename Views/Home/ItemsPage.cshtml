@using System.Data
<style>
    img {
        width: 100%;
        height: 270px;
    }

    .page-header {
        background: linear-gradient(rgba(136, 180, 78, .7), rgba(136, 180, 78, .7)), url(../Images/@ViewBag.Image) center center no-repeat;
        background-size: cover;
    }

</style>
<!-- Page Header Start -->
<div class="container-fluid page-header py-5 mb-5 wow fadeIn"
     data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-2 text-dark mb-4 animated slideInDown">@ViewBag.SubCategoryName</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-action="SubCategoryPage" asp-route-categoryID="@Model[0].CategoryID">@ViewBag.CategoryName</a></li>
                <li class="breadcrumb-item text-dark" aria-current="page">@ViewBag.SubCategoryName</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<!-- Vegitable Start -->
<div class="container-fluidpy-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row">
            @foreach (var data in Model)
            {
                <div class="col-4 mt-5">
                    <a asp-action="DetailPage" asp-route-itemID="@data.ItemID" class="d-block product-item rounded">
                        <img src="~/Images/Items/@data.ImageURL" alt="" />
                        <div class="bg-white shadow-sm text-center p-4 position-relative mt-n5 mx-4">
                            <h4 class="text-primary">@data.ItemName</h4>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
<!-- Vegitable End -->
